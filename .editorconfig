root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
tab_width = 4
trim_trailing_whitespace = true
insert_final_newline = true

# ignore stuff in the work directory

[work/**]
charset = unset
end_of_line = unset
indent_style = unset
tab_width = unset
trim_trailing_whitespace = unset
insert_final_newline = unset
